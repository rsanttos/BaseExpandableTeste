<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools" android:id="@+id/gridLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
tools:context="com.example.ramonsantos.baseexpandableteste.ecowalkapp.view.DetalhesFloraActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="horizontal" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vpImagensFlora"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </LinearLayout>


    <ExpandableListView
        android:id="@+id/elvDetalhesFlora"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="#0f0"
        android:dividerHeight="1dp"
        android:layout_below="@+id/LinearLayout1" />

</RelativeLayout>